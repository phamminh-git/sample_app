<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".logo"), "#" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="nav-item"><%= link_to t("layouts._header.home"), home_path %></li>
        <li class="nav-item"><%= link_to t("layouts._header.help"), help_path %></li>
        <li class="nav-item" class="nav-item">
          <%= link_to t("layouts._header.en"), locale:"en" %>
        </li>
        <li class="nav-item">
          <%= link_to t("layouts._header.vi"), locale:"vi" %>
        </li>
        <% if logged_in? %>
          <li><%= link_to t("layouts._header.user"), users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t("layouts._header.account") %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t("layouts._header.profile"), current_user %></li>
              <li><%= link_to t("layouts._header.setting"), "#" %></li>
              <li class="divider"></li>
              <li>
              <%= link_to t("layouts._header.logout"), logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to t("layout._header.login"), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
