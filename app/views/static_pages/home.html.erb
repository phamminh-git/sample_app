<div class="center jumbotron">
  <h1>
    <%= t ".heading" %>
  </h1>
  <h2>
    <%= t ".intro" %>
    <%= t ".name" %>
  </h2>
</div>
<%= link_to image_tag("rails.svg", alt: "Rails logo", class: "image-link"),
