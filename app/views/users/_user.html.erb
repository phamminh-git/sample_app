<tr>
  <td><%= gravatar_for user %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%= link_to t(".show"), user %></td>
  <td><%= link_to t(".edit"), edit_user_path(user) %></td>
  <% if current_user.admin && user != current_user %>
    <td><%= button_to t(".delete"), user, method: :delete %></td>
  <% end %>
</tr>
