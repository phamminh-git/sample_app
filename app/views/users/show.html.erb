<% provide :title, t(".page_title") %>
<h3>
  <%= t ".heading" %>
</h3>
<div class="user-info">
  <div class="user-avatar">
    <%= gravatar_for @user %>
  </div>
  <div class="user-desc">
    <%= t ".name" %><%= @user.name %>
    <br />
    <%= t ".email" %><%= @user.email %>
    <br />
    <%= t ".created_at" %><%= @user.created_at.strftime Settings.date.format %>
    <br />
    <%= t ".updated_at" %><%= @user.updated_at.strftime Settings.date.format %>
  </div>
</div>

<div class="col-md-8">
  <% if @microposts.any? %>
    <h3><%= t ".count", count: @microposts.count %></h3>
    <ol class="microposts">
      <%= render @microposts %>
    </ol>
  <% end %>
</div>
